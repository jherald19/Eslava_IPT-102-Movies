@model List<MovieViewModel>


@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
<style>

 
  body{
    background-color: rgb(2, 188, 239);
  }
  .grid-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 50px; /* Adjust the gap as needed */

  }


  .image-container {
    width: 220px; /* Adjust the width and height as needed */
    height: 400px;
    overflow: hidden;
  }


  .image-container img {
    max-width: 100%;
    transition: none;
     box-shadow: 0 8px 16px 0 white;
    border-radius: 15px;
      
  }


  .image-container:hover img {
    transform: none;
    
  }


    .image-container:hover h1 {
    color: #FF5733;
  }



a {
            position: relative;
            background: transparent;
            text-decoration: none;
            text-transform: uppercase;
            font-size: 1.0em;
            letter-spacing: 0.1em;
            font-weight: 400;
            padding: 2px 8px;
            transition: 0.5s;
            color: white;
            border-radius: 6px;



        }
a:hover{
  color: black;
  letter-spacing: 0.2em;
}
h1{
  font-size: 30px;
  color:white;
  padding-bottom: 20px;
}

</style>
</head>
<body>
  <h1>Movies</h1>
  <center>
<div class="grid-container">
  @foreach (var movie in Model)
  {
    <div class="image-container">
      <img src="@Url.Content(movie.Imgg)" alt="Image 1">
      <br> 
      <br>
      <a href="/movies/getmovie/@movie.Id">More Info</a>
    </div>
  }
</div>
</center>


</body>
</html>


