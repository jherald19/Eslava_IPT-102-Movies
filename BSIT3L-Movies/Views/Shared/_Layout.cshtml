

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BSIT3L_Movies</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BSIT3L_Movies.styles.css" asp-append-version="true" />
    <style>
    </style>
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-red border-bottom box-shadow mb-3" style="background-color: #007BFF;">
        <div class="container-fluid">
           <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="color: white; font-weight: bold; text-decoration: none;" onmouseover="this.style.color='black'" onmouseout="this.style.color='white'">Home</a>
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="#" style="color: white; font-weight: bold; text-decoration: none;" onmouseover="this.style.color='black'" onmouseout="this.style.color='white'">About Us</a>
              <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="#" style="color: white; font-weight: bold; text-decoration: none;" onmouseover="this.style.color='black'" onmouseout="this.style.color='white'">Contact Us</a>
             <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Privacy" style="color: white; font-weight: bold; text-decoration: none;" onmouseover="this.style.color='black'" onmouseout="this.style.color='white'">Privacy and Plicy</a>
             
<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
        aria-expanded="false" aria-label="Toggle navigation" onmouseover="this.style.color='red'" onmouseout="this.style.color='black'">
    <span class="navbar-toggler-icon"></span>
</button>

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

            </div>
        </div>
    </nav>
</header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

