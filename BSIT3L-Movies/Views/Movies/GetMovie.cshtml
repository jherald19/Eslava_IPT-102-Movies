<!DOCTYPE html>
<html>
<head>
    <style>
 body{
    background-color: rgb(2, 188, 239);
  }
.button-container{
            background-color: #E50914;
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            cursor: pointer;
            font-weight: bold;
}

a {
            position: relative;
            background: transparent;
            text-decoration: none;
            text-transform: uppercase;
            font-size: 1.0em;
            letter-spacing: 0.1em;
            font-weight: 400;
            padding: 2px 8px;
            transition: 0.5s;
            color: white;
            border-radius: 6px;



        }
a:hover{
  color: black;
  letter-spacing: 0.2em;
}
.card {
            border-radius: 8px;
            box-shadow: 0 8px 16px 0 white;
            width: 300px;
            margin: 20px;
            padding: 30px;
            background-color:rgb(37, 36, 36);
            color:white;
            
        }

        .card-image {
            max-width: 100%;
            height: auto;
        }

        .movie-title {
            font-size: 20px;
            font-weight: bold;
            margin-top: 10px;
        }

        .movie-description {
            font-size: 16px;
            margin-top: 10px;
        }
</style>
</head>
<body>
<center>
 <div class="card">
        <img class="card-image" src="@Url.Content(Model.Imgg)" alt="Movie Title">
        <div class="movie-title">Movie Title</div>
        <div class="movie-description">
            <p>Movie ID: @Model.Id</p>
                <p>Movie Name: @Model.Name</p>
                <p>Rating: @Model.Rating</p>
                <p>Release Year: @Model.ReleaseYear</p>
                <p>Genre: @Model.Genre</p>
                <div class="button-container">
                <a href="@Model.Vidd" target="_blank" class="button">Watch Trailer</a>
</div>
        </div>
    </div>
    </center>
</body>
</html>
